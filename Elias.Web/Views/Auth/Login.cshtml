@model Elias.Web.Models.Auth.LoginModel

@{
    ViewBag.Title = "Sign In";
}

@section Scripts {
    <script>
        $(function () {
            $('#Username').focus();
        });
    </script>
}

<div class="well small-form">
    <h3>@ViewBag.Title</h3>
    <hr />

    @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "form form-horizontal", autocomplete = "off" }))
    {
        <div class="form-body">
            @Html.Partial("ValidationSummary", ViewData.ModelState)
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

            <div class="form-group">
                <div class="col-xs-12">
                    @Html.SCILabelFor(m => m.Username)
                    @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(m => m.Username, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    @Html.SCILabelFor(m => m.Password)
                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </div>
    }
</div>