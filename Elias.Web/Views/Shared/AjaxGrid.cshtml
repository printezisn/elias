@model string

@{
    bool hideSearch = false;
    if (ViewData.ContainsKey("HideSearch"))
    {
        hideSearch = (bool)ViewData["HideSearch"];
    }
}

<div class="sci-ajax-grid-wrapper">
    @if (!hideSearch)
    {
        <div class="row">
            <div class="col-sm-offset-6 col-sm-6">
                <form class="sci-ajax-grid-search-form">
                    <div class="input-group">
                        <input type="text" class="form-control" name="searchTerm" placeholder="Search...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    }
    <div class="sci-ajax-grid sci-ajax-grid-auto" data-url="@Model">
        <p class="text-center">
            <i class="fa fa-2x fa-refresh fa-spin"></i>
        </p>
    </div>
</div>